<!DOCTYPE html>
<html lang="ko">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1, minimum-scale=1, maximum-scale=1">    <title>dwinguler</title>

    <!-- Bootstrap -->
    <link href="./css/bootstrap.min.css" rel="stylesheet">

    <link href="./css/common.css" rel="stylesheet">

  </head>
  <body>
    <div id="wrapper">
        <header id="header">
            <div id="menu-btn">
                <a href="./full_menu.html">
                    <img src="./img/btn/main_menu.png" />
                </a>
            </div>
            <div id="back-btn">
                <a href="#" onclick="javascript:history.back(); return false;">
                    <img src="./img/btn/back_btn.png" />
                </a>
            </div>
            <div id="logo">
                <a href="javascript:location.href='./index.html'">
                    <img src="./img/logo.jpg" />
                </a>
            </div>
            <div id="share-btn">
                <a href="#" onclick="window.plugins.socialsharing.share('dwinguler 앱을 추천합니다.', null, null, 'goo.gl/vHrce9'); return false;">
                    <img src="./img/btn/main_sharing.png" />
                </a>
            </div>
            <div class="top-menu">
                <ul class="list-inline">
                    <li id="tab1">
                        <a href="javascript:doSubmit('100');">
                            <img src="./img/menu/stardard_menu.png" >
                            <img src="./img/menu/stardard_menu_1.png" class="menu-activated-icon" >
                        </a>
                    </li>
                    <li id="tab2">
                        <a href="javascript:doSubmit('200');">
                            <img src="./img/menu/user_video_menu.png" >
                            <img src="./img/menu/user_video_menu_1.png" class="menu-activated-icon" >
                        </a>
                    </li>
                </ul>
            </div>
        </header>
        <div id="content-wrapper" class="L-T-M L-B BG2">
            <div id="video-box">
            </div>
        </div>
    </div>
    
    <div class="loading" id="loading">
		<img src="./img/loading/spinner.gif" />
	</div>
	<div class="loadingBack" id="loadingBack">
	</div>

    <script type="text/javascript" src="cordova.js"></script>
    <script type="text/javascript" charset="utf-8" src="video.js"></script>
    <script type="text/javascript" src="./js/app.js"></script>
    
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="./js/jquery-1.11.1.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="./js/bootstrap.min.js"></script>
    <script src="./js/fastclick.js"></script>
    <script>
        $(function() {
            FastClick.attach(document.body);
        });
        
        var menu = typeof(getParameter('menu')) == 'undefined' ? 100: getParameter('menu');

        if(menu == '100'){
        	var url = getParameter('url');
    		$('#tab1').attr('class','double activated');
    		$('#tab2').attr('class','double');
    		alert(url);
     		var v = '<video width="100%" height="100%" controls src="'+url+'" >'; 
     			v+= '</video>';
     		$('#video-box').html(v);
		//	$('#video-box').html('<iframe id="video-frame" src="'+url+'" frameborder="0" allowfullscreen></iframe>');

    	}else if(menu == '200'){
    		var url = getParameter('url');
    		$('#tab1').attr('class','double');
    		$('#tab2').attr('class','double activated');
    		
    		$('#video-box').html('<iframe id="video-frame" src="'+url+'" frameborder="0" allowfullscreen></iframe>');
    	}
        
        function doSubmit(menuId){
        	loadingShow();
        	var getParam = getParameter('menuId');
        	window.location.href='./video_list.html?menuId='+getParam + '&menu='+menuId;
        }
    </script>
  </body>
</html>